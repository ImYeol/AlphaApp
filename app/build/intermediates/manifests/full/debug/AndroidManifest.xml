<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="thealphalabs.alphaapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />

    <application
        android:name="thealphalabs.alphaapp.AlphaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:logo="@mipmap/logo"
        android:theme="@style/AppTheme" >
        <service
            android:name="thealphalabs.bluetooth.BluetoothTransferService"
            android:enabled="true" >
        </service>
        <service
            android:name="thealphalabs.wifip2p.WifiTransferService"
            android:enabled="true" >
        </service>

        <activity
            android:name="thealphalabs.alphaapp.GlassAppMain"
            android:label="@string/app_name"
            android:theme="@style/CustomHeaderLight"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.v4"
                android:value="splitActionBarWhenNarrow" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="thealphalabs.alphaapp.LicenseActivity"
            android:label="@string/title_activity_license" >
        </activity>
        <activity
            android:name="thealphalabs.alphaapp.BluetoothActivity"
            android:label="@string/title_activity_bluetooth" >
        </activity>
        <activity
            android:name="thealphalabs.alphaapp.bluetooth.DeviceListActivity"
            android:label="DeviceListActivity" />
        <activity android:name="com.nhaarman.listviewanimations.itemmanipulation.swipedismiss.SwipeTouchListenerTestActivity" />
        <activity android:name="com.nhaarman.listviewanimations.itemmanipulation.dragdrop.DynamicListViewTestActivity" />
    </application>

</manifest>