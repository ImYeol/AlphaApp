<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="3dp"
    android:paddingBottom="13dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/listitem_title_icon"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/listitem_title_icon"
        android:layout_toEndOf="@id/listitem_title_icon"
        android:id="@+id/listitem_title_title"
        android:paddingTop="10dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <TextView
        android:id="@+id/listitem_title_desc"
        android:layout_toEndOf="@id/listitem_title_icon"
        android:layout_toRightOf="@id/listitem_title_icon"
        android:layout_below="@id/listitem_title_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/listitem_title_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        app:showText="false"
        android:checked="false" />
</RelativeLayout>
